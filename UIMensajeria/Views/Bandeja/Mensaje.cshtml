
@{
    ViewBag.Title = "Mensaje";
    Layout = "~/Views/Bandeja/_LayoutPage1.cshtml";
}



<div class="container table-dark" style="margin:auto">

    <p>
        @Html.ActionLink("Atras", "MenuPrincipal")
    </p>


    <p class="text-capitalize" style="text-align:center"> @Session["NOMRE"].ToString() </p>

    <hr />

    @model IEnumerable<Modelos_y_ConexionDB.Modelos.Mensaje>


    <ul class="list-group table-dark">
        @foreach (var item in Model)
        {

            <li class="list-group-item list-group-item-dark" style="width: 85%; margin: auto">

                @if (item.EM == Convert.ToInt32(Session["IDus"].ToString()))
                {

                    <h5 class="mb-1" style="margin-left:8%"> @Html.DisplayFor(modelItem => item.TEXTO)</h5>
                    <small class="text-muted" style="margin-left:8%"> @Html.DisplayFor(modelItem => item.FECHA)</small>

                }
                else
                {

                    <h5 class="mb-1"> @Html.DisplayFor(modelItem => item.TEXTO)</h5>
                    <small class="text-muted"> @Html.DisplayFor(modelItem => item.FECHA)</small>

                }

            </li>
        }
    </ul>

</div>

<hr />
<div class="container" style="margin:auto">

    @using (Html.BeginForm("mje"))
    {
        <div class="container">
            <div class="row">
                <div class="col-11">
                    <textarea type="text" name="mje" class="form-control"></textarea>
                </div>
                <div class="col-1">
                    <button type="submit" class="btn btn-primary">
                        Enviar
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<a name="finalMjes" />


